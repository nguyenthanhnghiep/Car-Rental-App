<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/btn_datxe"
        android:layout_marginBottom="20dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvDatXeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID dat xe"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvKhachHangID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID khach hang:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLoaiXeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID loai xe:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNgayDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngay dat"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvNgayNhanXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngay nhan xe"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNgayTraXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngay tra xe"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang thai"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
