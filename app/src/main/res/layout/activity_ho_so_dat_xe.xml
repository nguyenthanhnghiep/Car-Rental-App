<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1fcf4"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:background="@drawable/btn_tren">

        <TextView
            android:layout_width="301dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:text="Hồ Sơ Đặt Xe"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="59dp"
            android:layout_height="58dp"
        android:id="@+id/print"
            android:scaleType="centerCrop"
            android:src="@drawable/printer"
            android:layout_marginTop="10dp"></ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/hosotenkh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Tên Khách Hàng"
            android:src="@drawable/newloho2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hosotenxe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Tên xe"/>
    </LinearLayout>

    <TextView
        android:id="@+id/hosogiaxe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
        android:text="Giá xe"
        android:textSize="18dp" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/hosoloaixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Loại Xe"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center">

        <ImageView
            android:background="@drawable/btn_datxe"
            android:id="@+id/anhxe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/newloho2" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/hosongaydatxe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đặt xe"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hosongaytraxe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Ngày trả xe"/>
        <TextView
            android:id="@+id/hosongaynhanxe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="18dp"
            android:text="Ngày nhận xe"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/hosotrangthai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/hosotongtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hosocongty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công ty thuê xe Go - Car"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="end"
        android:padding="10dp">

        <TextView
            android:id="@+id/hosongaythangnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17/11/2023"
            android:textSize="18dp"/>

    </LinearLayout>

</LinearLayout>