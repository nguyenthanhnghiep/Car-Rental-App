<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#506AD0B2"
    tools:context=".DangNhap.DangKy">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="277dp"
        android:layout_height="245dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/newloho2" />

    <EditText
        android:id="@+id/edttk_dk"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_dangky"
        android:ems="10"
        android:hint="Tên Tài Khoản"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edtnhapmk_dk"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_dangky"
        android:ems="10"
        android:hint="Nhập mật khẩu"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edtnhaplaimk_dk"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_dangky"
        android:ems="10"
        android:hint="Nhập lại mật khẩu"
        android:inputType="text"/>

    <Button
        android:id="@+id/btndangky_dk"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#6AD0B2"
        android:text="Đăng Ký" />




</LinearLayout>
