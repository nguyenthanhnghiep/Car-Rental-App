<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#505FCF86"
    tools:context=".LoaiXe.LoaiXe_Activity">



    <EditText
        android:id="@+id/edttenxe"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_dangky"
        android:ems="10"
        android:inputType="text"
        android:hint="Tên Xe xe" />

    <Spinner
        android:id="@+id/spinnerloaixe_quanly"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_dangky" />

    <Spinner
        android:id="@+id/spinnertrangthai_quanly"
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_dangky"/>

    <EditText
        android:id="@+id/edtanhxe"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_dangky"
        android:ems="10"
        android:inputType="text"
        android:hint="Mã ảnh xe"  />
    <EditText
        android:id="@+id/edtgiaxe"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:background="@drawable/btn_dangky"
        android:ems="10"
        android:inputType="number"
        android:hint="Giá Xe"  />

    <ListView
        android:id="@+id/listview_xe"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="325dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsuaxe"
            android:layout_width="140dp"
            android:backgroundTint="#5FCF86"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sửa" />

        <Button
            android:id="@+id/btnthemxe"
            android:layout_width="140dp"
            android:backgroundTint="#5FCF86"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnxoaxe"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="#5FCF86"
            android:layout_weight="1"
            android:text="Xóa" />
    </LinearLayout>

</LinearLayout>