<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:background="@drawable/btn_datxe"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idkhachhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ID Khách hàng" />

            <TextView
                android:id="@+id/hoten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ tên" />

            <TextView
                android:id="@+id/cnnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CMND" />

            <TextView
                android:id="@+id/BLX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bằng lái xe" />

            <TextView
                android:id="@+id/Coquan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cơ quan" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
